<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_friend_item"
    android:layout_marginBottom="8dp">

    <com.example.quanlychitieu.views.social.CircleTextView
        android:id="@+id/circleText"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/user_initial"
        android:importantForAccessibility="yes" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Nguyễn Văn A"/>

    <ImageButton
        android:id="@+id/btn_remove"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_remove"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/remove_friend"/>

</LinearLayout>