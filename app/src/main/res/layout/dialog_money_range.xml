<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_from"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/min_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_money"
            app:prefixText="₫"
            app:prefixTextColor="@color/gray_600">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editStartMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp"
                android:gravity="end"
                android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_to"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_money"
            app:prefixText="₫"
            app:prefixTextColor="@color/gray_600">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editFinishMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp"
                android:gravity="end"
                android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>