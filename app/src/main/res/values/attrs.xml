<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common Attributes -->
    <attr name="contentPadding" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="backgroundColor" format="color" />

    <!-- Custom Views -->
    <declare-styleable name="BoxTextView">
        <attr name="boxTitle" format="string" />
        <attr name="boxValue" format="string" />
        <attr name="boxTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AddFriendWidget">
        <attr name="addButtonText" format="string"/>
        <attr name="maxFriends" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="buttonBackgroundColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <!-- Thêm các thuộc tính khác tùy theo nhu cầu -->
    </declare-styleable>

    <declare-styleable name="ItemFilter">
        <attr name="title" format="string" />
        <attr name="list" format="reference" />
    </declare-styleable>

    <declare-styleable name="ItemBottomTabView">
        <attr name="icon" format="reference" />
        <attr name="text" format="string" />
    </declare-styleable>

    <!-- Add more custom view attributes as needed -->
</resources>